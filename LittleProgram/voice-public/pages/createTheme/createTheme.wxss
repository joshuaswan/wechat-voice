/* pages/createTheme/createTheme.wxss */

input {
  padding-left: 10px;
  padding-right: 10px;
  height: 44px;
  margin-left: auto;
  margin-right: auto;
  width: 90%;
  border: 1px solid lightgray;
  border-radius: 15px;
  font-size: 16px;
}

.viewTitle {
  margin-top: 20px;
  height: 40px;
  text-align: center;
}

.viewName {
  margin-top: 30px;
  margin-left: 40px;
  margin-right: 40px;
  height: 50px;
  background-color: #eed2ee;
  justify-content: center;
  display: flex;
  align-items: center;
  font-size: 16px;
}

.button {
  background-color: lightgray; /* Green */
  margin-top: 10px;
  margin-left: 80rpx;
  margin-right: 80rpx;
  color: white;
  padding: 15px 32px;
  text-align: center;
  text-decoration: none;
  border: 1px solid lightgray;
  border-radius: 15px;
  font-size: 16px;
}

textarea {
  padding-left: 10px;
  padding-right: 10px;
  margin-left: auto;
  margin-right: auto;
  width: 90%;
  border: 1px solid lightgray;
  border-radius: 10px;
  height: 300rpx;
  font-size: 16px;
}

.bottom {
  margin-left: 225rpx;
  margin-right: 225rpx;
  width: 150rpx;
  position: absolute;
  bottom: 10px;
}
