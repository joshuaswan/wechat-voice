<!--index.wxml-->
<view class='index'>
  <view class='header'>
    <image class="header-logo" src="resource/images/logo.png"></image>
    <view class='header-desc'>请带好耳机，确保你人设安全，开始你的声音之旅</view>
  </view>
  <view class="index-bd">
    <view class="kind-list">
      <block wx:for-items="{{list}}" wx:key="{{item.id}}">
        <navigator url="../component/pages/{{item.id}}/{{item.id}}" hover-class="navigator-hover">
          <view class="kind-list-item">
            <view id="{{item.id}}" class="kind-list-item-hd {{item.open ? 'kind-list-item-hd-show' : ''}}" bindtap="kindToggle">
              <view class="kind-list-text">{{item.name}}</view>
               <image class="kind-list-img" src="resource/images/{{item.id}}.png"></image> 
            </view>
          </view>
        </navigator>      
      </block>
    </view>
  </view>
  <view class='foot'>
  
  </view>
</view>

