<!--pages/posts/posts.wxml-->
<view>
  <swiper vertical='{{false}}' indicator-dots='true' autoplay='true' interval='5000'>
    <swiper-item>
      <image src='/images/post/post-1.png'></image>
    </swiper-item>
    <swiper-item>
      <image src='/images/post/post-2.png'></image>
    </swiper-item>
    <swiper-item>
      <image src='/images/post/post-3.png'></image>
    </swiper-item>    
  </swiper>
  <block wx:for="{{posts_key}}" wx:for-item="item">
    <view class='post-container'>
      <view class='post-author-data'>
        <image class='post-author' src='{{item.author_img}}'></image>
        <text class='post-data'>{{item.date}} {{index}}</text>
      </view>
      <text class='post-title'>{{item.title}}</text>
      <image class='post-image' src='{{item.post_img}}'></image>
      <text class='post-content'>{{item.content}}</text>
      <view class='post-like'>
        <image class='post-like-image' src='/images/icon/chat.png'></image>
        <text class='post-like-font'>{{item.collect_num}}</text>
        <image class='post-like-image' src='/images/icon/view.png'></image>
        <text class='post-like-font'>{{item.view_num}}</text>
      </view>
    </view>
  </block>
</view>